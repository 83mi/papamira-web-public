<link href="/css/search.css" rel="stylesheet">
<div class="modal fade" id="modal-search" tabindex="-1">
  <div class="modal-dialog modal-dialog-scrollable modal-dialog-fluid">
    <div class="modal-content">

      <div class="modal-header bg-primary">
        <h5 class="modal-title text-white"><strong><span class="oi oi-magnifying-glass"></span>キーワード検索</strong></h5>
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body ui-front">
        <select id="home_server">
          <option value="all" selected="selected">全鯖</option>
          <option value="s">S鯖</option>
          <option value="b">B鯖</option>
          <option value="v">V鯖</option>
          <option value="g">G鯖</option>
        </select>

        <select id="home_number" data-toggle="tooltip" title="最大検索件数">
          <option value="20">20件</option>
          <option value="50" selected="selected">50件</option>
          <option value="100">100件</option>
          <option value="300">300件</option>
          <option value="1000">1000件</option>
          <option value="99999">すべて</option>
        </select>
        <br>

        <div class="InputFrame">
          <input type="text" id="home_word" name="home_word" size="50" placeholder="検索キーワード 絞り込みはスペースを挟む 詳細は/help"/>
          <div class="ClearButton" onclick="purge_home_word_text()"></div>
        </div>

        <br>
        <br>
        <button id="home_search" type="button" class="btn btn-primary"><span class="oi oi-magnifying-glass"></span>検索</button>
        <button id="home_clear" type="button" class="btn btn-primary"><span class="oi oi-circle-x"></span>クリア</button>
        <button id="home_close" type="button" class="btn btn-default" data-dismiss="modal"><span class="oi oi-x"></span>閉じる</button>
        <br>
        <br>
        <input type="checkbox" id="home_auto_complete" value="1">
        <label class="control-label" for="home_auto_complete">用語で入力補完する</label>

        <br>
        <br>
        <br>
        <div class="progress">
          <div id="search_progress" class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
            <span id="search_progress_int"></span>
          </div>
        </div>

        <table id="home_table" class="table table-striped table-hover table-sm">
        <thead>
          <tr>
            <th>鯖</th>
            <th>時間</th>
            <th>名前</th>
            <th>内容</th>
          </tr>
        </thead>
        <tbody>
        </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
